@{
    Layout = "~/Views/Shared/Admin_layout.cshtml";
}
@model BAO_CAO.Models.KhachHang
@if (Model == null)
{
    <p class="text-danger">Lỗi: Model không có dữ liệu!</p>
}

<head>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/phong.css" asp-append-version="true" />


</head>
<nav class="mt-2 mb-4" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a class="text-decoration-none" asp-controller="TrangQL" asp-action="Index">Trang Chủ</a></li>
        <li class="breadcrumb-item"><a class="text-decoration-none" asp-action="Index">Danh Sách Khách Hàng</a></li>
        <li class="breadcrumb-item active" aria-current="page">Chi tiết khách hàng</li>
    </ol>
</nav>



<h2 class="text-center">Chi Tiết Khách Hàng</h2>
<div class="table-responsive">
    <table class="table table-dark table-bordered  text-white text-center table-hover">
    <tr>
        <th>Mã KH</th>
        <th>Tên Khách</th>
        <th>Địa Chỉ</th>
        <th>SĐT</th>
        <th>Email</th>
        <th>Đánh Giá</th>
    </tr>
    <tr>
        <td>@Model.MaKH</td>
        <td>@Model.TenKh</td>
        <td>@Model.DiaChi</td>
        <td>@Model.SDT</td>
        <td>@Model.email</td>
        <td>@Model.danhgia</td>
    </tr>
</table>
<</div>
<div class="d-flex gap-3 flex-column flex-sm-row">

    <a class="btn btn-success" asp-action="Index">Quay lại</a>
</div>


