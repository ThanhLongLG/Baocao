@page
@model LoginModel
@{
    Layout = null;
}

@{
    ViewData["Title"] = "Log in";
}
   
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Access Denied</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8d7da;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .error-container {
            text-align: center;
            background: white;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .error-code {
            font-size: 100px;
            font-weight: bold;
            color: #721c24;
        }

        .error-message {
            font-size: 24px;
            color: #721c24;
        }

        .btn-home {
            margin-top: 20px;
            background-color: #721c24;
            color: white;
            border-radius: 8px;
        }

            .btn-home:hover {
                background-color: #5a1216;
            }
    </style>
</head>
<body>
    <div class="error-container">
        <div class="error-code">403</div>
        <div class="error-message">Bạn không có quyền truy cập trang này!</div>
        <a href="/" class="btn btn-home">Quay lại trang chủ</a>
    </div>
</body>
</html>
